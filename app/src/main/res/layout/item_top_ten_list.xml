<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeView"
    android:background="@drawable/bg_top_ten_item_card_base"
    android:padding="15dp"
     >

    <ImageView
        android:src="@drawable/ic_top_ten_avatar"
        android:id="@+id/imgThumb"
        android:background="#fff"
        android:layout_width="115dp"
        android:layout_height="100dp" />

    <com.app.crewbid.ui.CustomTextview
        android:id="@+id/txtName"
        style="@style/textview_activity"
        android:layout_toRightOf="@+id/imgThumb"
        android:drawableRight="@drawable/ic_add"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Crew Lolipop"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.app.crewbid.ui.CustomTextview
        android:id="@+id/txtDescription"
        style="@style/textview_activity"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/imgThumb"
        android:ellipsize="end"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:text="Info. Dummy text. Dummy text."
        android:textSize="14sp"
        android:textStyle="normal" />

    <com.app.crewbid.ui.CustomTextview
        android:id="@+id/txtCounter"
        style="@style/textview_activity"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtDescription"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgThumb"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:singleLine="true"
        android:text="999"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>